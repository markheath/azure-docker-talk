{
  "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "voteReplicaCount":{
      "defaultValue": "1",
      "type": "string",
      "metadata": {
          "description": "The number of service replicas for the vote service."
      }
    },
    "resultReplicaCount":{
      "defaultValue": "1",
      "type": "string",
      "metadata": {
          "description": "The number of service replicas for the result service."
      }
    },
    "workerReplicaCount":{
      "defaultValue": "1",
      "type": "string",
      "metadata": {
          "description": "The number of service replicas for the worker service."
      }
    }
  },
  "resources": [
    {
      "apiVersion": "2018-09-01-preview",
      "name": "votingNetwork",
      "type": "Microsoft.ServiceFabricMesh/networks",
      "location": "[resourceGroup().location]",
      "dependsOn": [],
      "properties": {
        "kind": "Local",
        "description": "Service Fabric Mesh Network.",
        "networkAddressPrefix": "10.0.0.0/24"
      }
    },
    {
      "apiVersion": "2018-09-01-preview",
      "name": "ingressGateway",
      "type": "Microsoft.ServiceFabricMesh/gateways",
      "location": "[resourceGroup().location]",
      "tags": {},
      "dependsOn": [
        "Microsoft.ServiceFabricMesh/networks/votingNetwork"
      ],
      "properties": {
        "description": "Service Fabric Mesh Gateway.",
        "sourceNetwork": {
          "name": "Open"
        },
        "destinationNetwork": {
          "name": "[resourceId('Microsoft.ServiceFabricMesh/networks', 'votingNetwork')]"
        },
        "http": [
          {
            "name": "vote",
            "port": 80,
            "hosts": [
              {
                "name": "*",
                "routes": [
                  {
                    "name":  "voteRoute",
                    "match": {
                      "path": {
                        "value": "/vote",
                        "rewrite": "/",
                        "type": "Prefix"
                      }
                    },
                    "destination": {
                      "applicationName": "votingApp",
                      "serviceName": "voteService",
                      "endpointName": "VoteListener"
                    }
                  },
                  {
                    "name": "resultRoute",
                    "match": {
                      "path": {
                        "value": "/result",
                        "rewrite": "/",
                        "type": "Prefix"
                      }
                    },
                    "destination": {
                      "applicationName": "votingApp",
                      "serviceName": "resultService",
                      "endpointName": "ResultListener"
                    }
                  }
                ]
              }
            ]
          }
        ]
      }
    },
    {
      "apiVersion": "2018-09-01-preview",
      "name": "votingApp",
      "type": "Microsoft.ServiceFabricMesh/applications",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "Microsoft.ServiceFabricMesh/networks/votingNetwork"
      ],
      "properties": {
        "services": [
          {
            "type": "Microsoft.ServiceFabricMesh/services",
            "name": "voteService",
            "properties": {
              "description": "vote service",
              "osType": "Windows",
              "codePackages": [
                {
                  "name": "voteCode",
                  "image": "dockersamples/examplevotingapp_vote:dotnet-nanoserver-sac2016",
                  "endpoints": [
                    {
                      "name": "VoteListener",
                      "port": 80
                    }
                  ],
                  "environmentVariables": [
                    {
                      "name": "Voting__OptionA",
                      "value": "Service Fabric"
                    },
                    {
                      "name": "Voting__OptionB",
                      "value": "Kubernetes"
                    }
                  ],
                  "resources": {
                    "requests": {
                      "cpu": "0.5",
                      "memoryInGB": "1"
                    }
                  }
                }
              ],
              "replicaCount": "[parameters('voteReplicaCount')]",
              "networkRefs": [
                {
                  "name": "[resourceId('Microsoft.ServiceFabricMesh/networks', 'votingNetwork')]",
                  "endpointRefs": [
                    {
                      "name": "VoteListener"
                    }
                  ]
                }
              ]
            }
          },
          {
            "name": "resultService",
            "properties": {
              "description": "result service.",
              "osType": "Windows",
              "codePackages": [
                {
                  "name": "resultCode",
                  "image": "dockersamples/examplevotingapp_result:dotnet-nanoserver-sac2016",
                  "endpoints": [
                    {
                      "name": "ResultListener",
                      "port": 20002
                    }
                  ],
                  "environmentVariables": [
                    {
                      "name": "ConnectionStrings:ResultData",
                      "value": "Server=db;Port=4000;Database=votes;User=root;SslMode=None"
                    },
                    {
                      "name": "ASPNETCORE_URLS",
                      "value": "http://+:20002"
                    }
                  ],
                  "resources": {
                    "requests": {
                      "cpu": "0.5",
                      "memoryInGB": "1"
                    }
                  }
                }
              ],
              "replicaCount": "[parameters('resultReplicaCount')]",
              "networkRefs": [
                {
                  "name": "[resourceId('Microsoft.ServiceFabricMesh/networks', 'votingNetwork')]",
                  "endpointRefs": [
                    {
                      "name": "ResultListener"
                    }
                  ]
                }
              ]
            }
          },
          {
            "name": "worker",
            "properties": {
              "description": "worker service.",
              "osType": "Windows",
              "codePackages": [
                {
                  "name": "worker",
                  "image": "dockersamples/examplevotingapp_worker:dotnet-nanoserver-sac2016",
                  "endpoints": [

                  ],
                  "environmentVariables": [
                    {
                      "name": "ConnectionStrings:VoteData",
                      "value": "Server=db;Port=4000;Database=votes;User=root;SslMode=None"
                    }
                  ],
                  "resources": {
                    "requests": {
                      "cpu": "0.5",
                      "memoryInGB": "1"
                    }
                  }
                }
              ],
              "replicaCount": "[parameters('workerReplicaCount')]",
              "networkRefs": [
                {
                  "name": "[resourceId('Microsoft.ServiceFabricMesh/networks', 'votingNetwork')]"
                }
              ]
            }
          },
          {
            "name": "message-queue",
            "properties": {
              "description": "message-queue service.",
              "osType": "Windows",
              "codePackages": [
                {
                  "name": "message-queue",
                  "image": "registry.hub.docker.com/library/nats:nanoserver",
                  "endpoints": [
                    {
                      "name": "MessageQueueListener",
                      "port": 4222
                    }
                  ],
                  "environmentVariables": [

                  ],
                  "resources": {
                    "requests": {
                      "cpu": "0.5",
                      "memoryInGB": "1"
                    }
                  }
                }
              ],
              "replicaCount": "1",
              "networkRefs": [
                {
                  "name": "[resourceId('Microsoft.ServiceFabricMesh/networks', 'votingNetwork')]",
                  "endpointRefs": [
                    {
                      "name": "MessageQueueListener"
                    }
                  ]
                }
              ]
            }
          },
          {
            "name": "db",
            "properties": {
              "description": "db service.",
              "osType": "Windows",
              "codePackages": [
                {
                  "name": "tidb",
                  "image": "dockersamples/tidb:nanoserver",
                  "endpoints": [
                    {
                      "name": "DbListener",
                      "port": 4000
                    }
                  ],
                  "environmentVariables": [

                  ],
                  "resources": {
                    "requests": {
                      "cpu": "0.5",
                      "memoryInGB": "1"
                    }
                  }
                }
              ],
              "replicaCount": "1",
              "networkRefs": [
                {
                  "name": "[resourceId('Microsoft.ServiceFabricMesh/networks', 'votingNetwork')]",
                  "endpointRefs": [
                    {
                      "name": "DbListener"
                    }
                  ]
                }
              ]
            }
          }
        ],
        "description": "Sample voting app. https://github.com/sixeyed/example-voting-app"
      }
    }
  ],
  "outputs": {
    "publicIPAddress": {
      "value": "[reference('ingressGateway').ipAddress]",
      "type": "string"
    }
  }
}